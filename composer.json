{
    "name": "phlexus/phlexus-core",
    "description": "Phlexus - Content Management System based on Phalcon PHP Framework",
    "keywords": ["phlexus", "cms", "phalcon"],
    "require": {
        "php": ">=7.2",
        "ext-phalcon": "^4.0.0-beta.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "Phlexus\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    }
}
