{
    "name": "phlexus/phlexus-core",
    "description": "Phlexus - Content Management System (CMS) based on Phalcon PHP Framework",
    "license": "BSD-3-Clause",
    "keywords": [
        "phlexus",
        "cms",
        "phalcon"
    ],
    "require": {
        "php": ">=7.2",
        "ext-phalcon": "^4.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phalcon/ide-stubs": "^4.0",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Phlexus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "tests/",
            ".codecov.yml",
            ".gitattributes",
            ".gitignore",
            ".travis",
            "phpcs.xml.dist",
            "phpstan.neon.dist",
            "phpunit.xml.dist",
            "psalm.xml.dist"
        ]
    }
}
